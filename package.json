{
  "name": "spaceapp",
  "version": "1.0.0",
  "description": "Electron App with Modern UI",
  "main": "src/main.js",
  "scripts": {
    "prebuild": "node scripts/generate-config.js",
    "start": "electron .",
    "build": "npm run generate-config && electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "devDependencies": {
    "electron": "^25.9.8",
    "electron-builder": "^25.1.8"
  },
  "dependencies": {
    "axios": "^1.8.4",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.7",
    "electron-store": "^7.0.3",
    "googleapis": "^148.0.0",
    "node-fetch": "^2.7.0"
  },
  "build": {
    "appId": "com.spaceapp",
    "productName": "SpaceApp",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "pages/**/*",
      "assets/**/*",
      "node_modules/**/*",
      "main.js",
      "config.js",
      ".env",
      "package.json",
      "src/**/*",
      "pages/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "target": ["dmg", "zip"],
      "icon": "assets/spaceapp.icns",
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": ["nsis", "zip"],
      "icon": "assets/spaceapp.ico"
    },
    "linux": {
      "target": ["AppImage", "deb", "rpm"],
      "icon": "assets/spaceapp.png",
      "category": "Utility",
      "maintainer": "ccharlesroberto@gmail.com"
    }
  }
}
